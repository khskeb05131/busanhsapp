<!--                        android:layout_height="wrap_content">-->
<!--                    <TextView android:layout_width="match_parent"-->
<!--                              android:layout_height="wrap_content" android:textSize="20sp" android:layout_margin="8dp"-->
<!--                              android:layout_marginBottom="8dp" android:textColor="#000000"-->
<!--                              android:gravity="center|center_horizontal|center_vertical"-->
<!--                              android:text="@string/scboard01"/>-->
<!--                </LinearLayout>-->
<!--            </androidx.cardview.widget.CardView>-->
        </LinearLayout>
    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/sc_nav_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/windowBackground"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:menu="@menu/bottom_nav_menu" app:layout_constraintHorizontal_bias="0.0"
    >
    </com.google.android.material.bottomnavigation.BottomNavigationView>
</androidx.constraintlayout.widget.ConstraintLayout>